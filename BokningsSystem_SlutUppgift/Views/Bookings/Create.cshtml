@model BokningsSystem_SlutUppgift.Models.ViewModels.CreateBookingViewModel;

    <div class="text-center">
        <h1 class="display-4" style="position: relative; right: 310px;">Create New Booking</h1>
        </div>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label class="control-label">Booker</label>
                        <input class="form-control" asp-for="Booking.Booker" />
                        <span asp-validation-for="Booking.Booker" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Booking Email</label>
                        <input class="form-control" asp-for="Booking.BookerEmail" />
                        <span asp-validation-for="Booking.BookerEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Giraffe</label>
                        <select class="form-control" asp-for="Booking.GiraffeId"
                                asp-items="@(new SelectList(Model.Giraffes, "Id", "Name"))">
                            <option>Select Giraffe</option>
                        </select>
                        <span asp-validation-for="Booking.GiraffeId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">From</label>
                        <input class="form-control" asp-for="Booking.From" />
                        <span asp-validation-for="Booking.From" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">To</label>
                        <input class="form-control" asp-for="Booking.To" />
                        <span asp-validation-for="Booking.To" class="text-danger"></span>
                    </div>
                    <div>
                        <input class="btn btn-primary" type="submit" value="Create" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to bookings</a>
        </div>

        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml"); }
        }
